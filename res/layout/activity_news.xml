<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/newstitle" />

    <ImageButton
        android:id="@+id/btST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btCNA"
        android:layout_marginRight="49dp"
        android:background="@null"
        android:src="@drawable/st_icon" />

    <Button
        android:id="@+id/btBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Return" />

    <ImageButton
        android:id="@+id/imgInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btST"
        android:layout_alignTop="@+id/imgVT"
        android:background="#ffffff"
        android:src="@drawable/infowars_icon" />

    <ImageButton
        android:id="@+id/btCNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="54dp"
        android:background="@null"
        android:src="@drawable/cna_icon" />

    <ImageButton
        android:id="@+id/imgVT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btBack"
        android:layout_alignLeft="@+id/btCNA"
        android:layout_marginBottom="25dp"
        android:background="#ffffff"
        android:src="@drawable/veterans_today_icon" />

</RelativeLayout>